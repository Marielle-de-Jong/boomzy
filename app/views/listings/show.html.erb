<div class="container">
  <% if @listing.listing_image %>
  <div class="listings-show-banner">
    <%= image_tag(@listing.listing_image, alt: "banner", class:"listings-show-image") %>
    <%= link_to 'Change image', add_image_path(@listing), class: "button standard accent" %>
  </div>
  <% else %>
  <div class="listings-show-banner">
    <%= image_tag('homepage_banner.jpg', class:"listings-show-image") %>
    <%= link_to 'Change image', add_image_path(@listing), class: "button standard accent" %>
  </div>
  <% end %>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <div class="listing-infos col-12 col-sm-12 col-md-8 col-lg-8">
      <h2><%= @listing.title %></h2>
      <h2><%= @average_rating %></h2>
      <div class="listing-top-infos d-flex", style="color:grey;">
        <!-- render "shared/review-score", user: @average_rating -->
        <% @average_rating = @listing.user.average_rating(@listing.user) %>
        <p class="mr-4"><i class="fas fa-star"></i> <%= @average_rating %> (<%= @listing.user.reviews.count %>)</p>
        <p class="mr-4"><%= @listing.address.city%>, The Netherlands</p>
        <p class="mr-4">With <%= @listing.user.first_name %>   <%= @listing.user.last_name %> </p>
        <p class="mr-4"> <%= @listing.skill_level %> class</p>
      </div>
      <br>
      <br>
      <%= @listing.description %> </p>
      <br>
      <h6>About <%= @listing.user.first_name %></h6>
      <p> <%= @listing.user.bio %> </p>
      <br>
      <h6><%= @listing.user.first_name %> offers this class because </h6>
      <p> <%= @listing.user.motivation %> </p>
      <br>
      <h6><%= @listing.user.first_name %>'s Reviews </h6>
      <% @listing.user.reviews.each do |review| %>
        <p> - "<%= review.content %>" </p>
      <% end %>
      <% if @listing.user.has_socials? %>
        <h6><%= @listing.user.first_name %> socials</h6>
        <div class="listing-socials d-flex socials">
          <% if @listing.user.linkedin_link? %>
          <a href="<%= @listing.user.linkedin_link %>" target="_blank"><i class="fab fa-linkedin-in"></i></a>
          <% elsif @listing.user.twitter_link? %>
          <a href="<%= @listing.user.twitter_link %>" target="_blank"><i class="fab fa-twitter"></i></a>
          <% elsif @listing.user.instagram_link? %>
          <a href="<%= @listing.user.facebook_link %>" target="_blank"><i class="fab fa-facebook-f"></i></a>
          <% elsif @listing.user.facebook_link?%>
          <a href="<%= @listing.user.instagram_link %>" target="_blank"><i class="fab fa-instagram"></i></a>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="listing-booking-form col-12 col-sm-12 col-md-4 col-lg-4">
      <h5>Free experience</h5>
      <%= simple_form_for([@listing, @booking]) do |f| %>
      <%= f.input :date %>
      <%= f.submit 'Reserve', class: "button standard accent fill"%>
      <% end %>
    </div>
  </div>
</div>



