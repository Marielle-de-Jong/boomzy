<h3 class="mt-3">My bookings</h3>

<% if @user.bookings.nil? %>
  <h6>You do not currently have any bookings. <%= link_to 'Search Listings', listings_path, class: "button standard accent fill" %></h6>
<% else %>
  <% @user.bookings.each do |booking| %>
    <div class="booking-account-card mt-3">
      <p>You've booked <%= booking.listing.title %> on <%= booking.created_at %></p>
      <p>Your teacher is <%= booking.listing.user.first_name %> <%= booking.listing.user.last_name %></p>
      <p>The status is <%= booking.status %></p>
      <p>The date for your booking is <%= booking.date %></p>
      <%= link_to 'Details', booking_path(booking) %> |
      <%= link_to booking_path(booking), method: :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  <% end %>
<% end %>


