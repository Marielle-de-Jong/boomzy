<div class="navbar">
  <div class="navbar-left">
  <!-- Drop down menu on left -->
  <div class="dropdown">
    <%= image_tag "burger_menu", class: "burger-menu dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
      <% if user_signed_in? %>
      <%= link_to "My Profile", "#", class: "dropdown-item" %>
      <%= link_to "Home", "#", class: "dropdown-item" %>
      <%= link_to "Messages", "#", class: "dropdown-item" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
      <%= link_to "Link", "#", class: "nav-link" %>
      <% end %>
    </div>
  </div>
  <!-- central logo -->
  <div class="logo">
    <%= link_to "BOOMZY", "#",  class: "nav-logo" %>
  </div>
  </div>
  <!-- User menu on right -->
    <% if !user_signed_in? %>
    <%= link_to "SIGN IN", new_user_session_path, class: "navbar-btn" %>
    <% else %>
    <%= link_to "USER NAME", "#", class: "navbar-btn" %>
  <% end %>
</div>
