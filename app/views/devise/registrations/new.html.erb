<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first name" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :photo, as: :file %>
    <%= f.input :date_of_birth, as: :date, html5: true,
                input_html: { autocomplete: "Date of Birth" } %>
                  <%= f.simple_fields_for :address_attributes, resource.build_address do |ff|%>
                    <%= ff.input :address_line_1 %>
                    <%= ff.input :address_line_2 %>
                    <%= ff.input :city %>
                    <%= ff.input :postcode %>
                  <% end %>
    <%= f.input :bio, as: :text,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "tell us about yourself" }%>
    <%= f.input :motivation, as: :text,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "tell us about motivations" }%>
                <%= f.simple_fields_for :skill_attributes, resource.build_skill do |ff|%>
                    <%= ff.input :name %>
                    <%= ff.input :category %>
                  <% end %>
    <%= f.input :facebook_link,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Link to your Facebook" }%>
    <%= f.input :twitter_link,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Link to your twitter" }%>
    <%= f.input :instagram_link,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Link to your instagram_link" }%>
    <%= f.input :linkedin_link,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Link to your linkedin" }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

